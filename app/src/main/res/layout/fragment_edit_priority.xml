<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/marginLarge"
    android:paddingEnd="@dimen/marginLarge">

    <TextView
        android:id="@+id/editPriorityHeading"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/HeadingTextView"
        android:layout_marginBottom="@dimen/marginLarge"
        android:text="@string/editPriorityHeadingText"/>
    <Spinner
        android:id="@+id/prioritySelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/priorities"
        android:layout_marginTop="@dimen/marginLarge"/>
    <Button
        android:id="@+id/saveEditPriorityAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginLarge"
        android:layout_marginBottom="@dimen/marginLarge"
        android:layout_gravity="center"
        android:text="@string/saveTaskActionText"/>

</LinearLayout>